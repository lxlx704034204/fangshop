<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	<resultMap type="com.fang.fangshop.core.system.bean.User" id="userMap">
		<id column="id" property="id"/>
		<result column="username" property="username"/>
		<result column="password" property="password"/>
		<result column="status" property="status"/>
		<result column="nickname" property="nickname"/>
		<result column="email" property="email"/>
		<result column="rid" property="rid"/>
		<result column="createAccount" property="createaccount"/>
		<result column="createtime" property="createtime"/>
		<result column="updatetime" property="updatetime"/>
		<result column="updateAccount" property="updateaccount"/>
		<association property="role" column="rid" javaType="com.fang.fangshop.core.system.bean.Role">
			<id column="id" property="id"/>
			<result column="role_name" property="rolename"/>
			<result column="role_desc" property="roledesc"/>
			<result column="role_dbPrivilege" property="roledbprivilege"/>
			<result column="status" property="status"/>
		</association>
	</resultMap>

	<!-- 查询单个用户 -->
	<select id="user.selectOne" parameterType="com.fang.fangshop.core.system.bean.User" resultMap="userMap">
		select * from t_user u ,t_role r where u.rid=r.id
		<if test="id !=null and id!='' ">
			and u.id=#{id}
		</if>
		<if test="username !=null and username !='' ">
			and u.username= #{username}
		</if>
		<if test="password !=null and password !='' ">
			and u.password= #{password}
		</if>
	</select>
	
	<!-- 查询所有用户 -->
	<select id="user.selectList" parameterType="com.fang.fangshop.core.system.bean.User"  resultMap="userMap">
		select * from t_user u ,t_role r where u.rid=r.id
		<if test="status!=null and status != ''">
			and u.status = #{status}
		</if>
		 order by u.id desc limit #{offset},#{pageSize} 
	</select>
	
	<!-- 查询列表总记录数 -->
	<select id="user.selectTotalCount" parameterType="com.fang.fangshop.core.system.bean.User" resultType="Integer">
		select count(*) total from t_user u ,t_role r where u.rid=r.id
		<if test="status!=null and status != ''">
			and u.status = #{status}
		</if>
		order by u.id desc
	</select>
	
	<!-- 新增 -->
	<insert id="user.addUser" parameterType="com.fang.fangshop.core.system.bean.User">
		INSERT INTO t_user (username,PASSWORD,createtime,createAccount,STATUS,rid,nickname,email) VALUES (
			#{username},#{password},NOW(),#{createaccount},#{status},#{rid},#{nickname},#{email}
		)
	</insert>
	
	<!-- 修改  (删除也是调用此sql，只是修改状态而已)-->
	<update id="user.updateUser" parameterType="com.fang.fangshop.core.system.bean.User">
		UPDATE t_user SET password = #{password} , status = #{status} , rid = #{rid} , 
		nickname = #{nickname} , email  = #{email} , updatetime = NOW() , updateAccount = #{updateaccount}
		where id = #{id}
	</update>
	
</mapper>